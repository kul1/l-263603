  %div{"data-role" => "header", "data-theme" => "b", "data-backbtn"=>"false"}
    %h1= head
    %h1= "Panel responsive"
    %a{"data-icon" => "bars", "data-iconpos" => "notext", :href => "#nav-panel"}
      %a{"data-icon" => "gear", "data-iconpos" => "notext", :href => "#add-form"} Add Menu
